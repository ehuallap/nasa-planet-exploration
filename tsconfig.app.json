{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true, // Permitir la emisión
    "allowImportingTsExtensions": true, // Añadir esta línea
    
    /* JSX */
    "jsx": "react-jsx",

    /* Linting */
    "strict": false,  // Relajar las reglas
    "noUnusedLocals": false,  // Permitir variables no usadas
    "noUnusedParameters": false,  // Permitir parámetros no usados
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "noEmitOnError": false
  },
  "include": ["src"]
}
