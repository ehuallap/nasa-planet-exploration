{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true, // Permitir la emisión
    "allowImportingTsExtensions": true, // Añadir esta línea
    
    /* Linting */
    "strict": false,  // Relajar las reglas
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "noEmitOnError": false
  },
  "include": ["vite.config.ts"]
}
